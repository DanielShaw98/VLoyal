<div class="login-container">
<h2 class="login-header">Welcome back</h2>
<%= image_tag 'main-v', alt: 'heading-image', class: "main-image"%>
  <div class="d-flex btn-container align-items-center px-5 py-4 justify-content-between">
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-facebook-f fa-xl"></i>
    </button>
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-x-twitter fa-xl"></i>
    </button>
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-google fa-xl"></i>
    </button>
  </div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "email-form" },
                placeholder: "Email",
                label: false %>
    <%= f.input :password,
                required: false,
                label: false,
                placeholder: "Passwword",
                input_html: { autocomplete: "current-password", class: "email-form", } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions d-flex justify-content-center my-4">
    <%= f.button :submit, "Sign in", class: "signin-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

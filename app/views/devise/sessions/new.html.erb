<div class="login-container">
<h2 class="login-header">Welcome back</h2>
<%= image_tag 'main-v.png', alt: 'heading-image', class: "main-image"%>
  <div class="d-flex btn-container align-items-center px-5 py-4 justify-content-between">
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-facebook-f fa-xl"></i>
    </button>
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-x-twitter fa-xl"></i>
    </button>
    <button class="btn-style" style="width: 50px; height: 50px;">
      <i class="fa-brands fa-google fa-xl"></i>
    </button>
  </div>

<div data-controller="prompt" data-prompt-path-value="<%= new_registration_path(resource_name) %>">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "email-form" },
                  placeholder: "Email",
                  label: false %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Password",
                  input_html: { autocomplete: "current-password", class: "email-form", } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.input :business, wrapper_html: {class: "d-none"}, input_html: { data: {prompt_target: "checkBox"} }%>
    </div>

    <div class="form-actions d-flex justify-content-center my-4">
      <%= f.button :submit, "Sign in", class: "signin-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <div data-prompt-target="prompt" class="prompt d-none">
    <button class="prompt-btn business-btn" data-action="click->prompt#business">Business</button>
    <button class="prompt-btn guest-btn" data-action="click->prompt#client">User</button>
    <div class="prompt-div">
    </div>
    <%= image_tag("prompt-image.png", alt: "prompt-image", class: "prompt-image") %>
  </div>
</div>

</div>

<div class="loyalty-card" data-basic-qr-code-reader-target='card'>
  <div class="loyalty-card-inner">
    <div class="loyalty-card-front" id="<%= @card.brand.card_style.theme.downcase %>">

      <div class="brand-name">
        <p><i class="fa-regular fa-circle"></i> <%= @card.brand.name %></p>
      </div>

      <div class="user-date">
        <h6 class="card-user-name"><%= @card.user.first_name %> <%= @card.user.last_name %></h6>
        <%# <h6 class="card-user-name"> <%= @card.created_at.strftime('%m/%y') %>
        <h6 class="no-of-stamps"> <%= @card.stamps %>/<%= @card.card_style.max_stamps %> </h6>
      </div>

    </div>

    <div class="loyalty-card-back" id="<%= @card.brand.card_style.theme.downcase %>">
      <div class="brand-name">
        <p><i class="fa-regular fa-circle"></i> <%= @card.brand.name %></p>
      </div>

      <% stamps = @card.stamps %>
      <%# <% stamps = 3 %>
      <div class="stamp-area">
        <% @card.card_style.max_stamps.times do %>
          <% if stamps.positive? %>
            <%# <i class="fa-solid fa-circle-xmark" style="color: #ffffff;"></i> %>
            <%# <i class="fa-solid fa-mug-hot" style="color: #ffffff;"></i> %>
            <%# <svg fill="#6C7276" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="64px" height="64px" viewBox="-326.05 -326.05 978.15 978.15" xml:space="preserve"><g id="SVGRepo_bgCarrier" stroke-width="0"><rect x="-326.05" y="-326.05" width="978.15" height="978.15" rx="489.075" fill="#FFFFFF" strokewidth="0"></rect></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <path d="M14.257,275.602C-17.052,220.391,4.253,133.798,69.023,69.01c73.553-73.543,175.256-91.076,227.182-39.16 c0.061,0.068,0.112,0.145,0.195,0.214c-10.392,30.235-43.486,94.567-142.686,129.348C62.842,191.29,27.788,241.972,14.257,275.602z M310.81,48.75c-7.871,18.361-21.57,42.356-45.173,65.957c-23.725,23.735-57.445,47.046-105.208,63.8 C63.49,212.5,36.405,268.149,28.848,295.116c0.357,0.36,0.664,0.733,1.011,1.083c51.921,51.918,153.628,34.386,227.176-39.169 C322.479,191.585,343.526,103.869,310.81,48.75z"></path> </g> </g></svg> %>
            <div class="stamp stamped" data-basic-qr-code-reader-target='stamp'>
              <%= image_tag @card.brand.category.file_name %>
            </div>
          <% else %>
            <div class="stamp" data-basic-qr-code-reader-target='stamp'>
              <%= image_tag 'bean.svg'%>
            </div>
          <% end %>
          <% stamps -= 1%>
        <% end %>

      </div>
    </div>
  </div>
</div>

<h1>brands index</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div data-controller="search-brands">
        <%= form_with url: brands_path, method: :get, html: {class: "mb-4", data: {search_brands_target: "form"}} do |f| %>
          <%= f.label :query, "Type a brand name" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: {search_brands_target: "input", action:"keyup->search-brands#search"}
                           %>
        <% end %>

        <%= render "list", brands: @brands %>
      </div>
    </div>
  </div>
</div>


<%# itirate thru each og them by category %>
<% @brands.each do |brand| %>
<%= brand.name %>
<%= brand.rating %>
<% end %>

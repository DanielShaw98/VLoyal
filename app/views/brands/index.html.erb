<h1>brands index</h1>


<%  %>

<div class="container">
  <div class="row">
    <div class="col" data-controller="geocoding">
      <h1 class="h2 my-3 d-flex justify-content-center">Brands</h1>

      <p data-geocoding-target="location">Waiting for location...</p>

      <div data-controller="search-brands">
        <%= form_with url: brands_path, method: :get, html: {class: "mb-4", data: {search_brands_target: "form"}} do |f| %>
          <%= f.label :query, "Type a brand name" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: {search_brands_target: "input", action:"keyup->search-brands#search"}
                           %>
        <% end %>

        <div class="list-wrapper" data-geocoding-target="list">
          <%= render "list", brands: @brands, user_location: @user_location %>
        </div>
        <%# itirate through each og them by category %>

      </div>
    </div>
  </div>
</div>

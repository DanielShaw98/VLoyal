<div class="container">
  <div class="brand-image">
    <% if @brand.photo.attached? %>
      <%= cl_image_tag @brand.photo.key, :alt => "rss feed", :style => " width:100%;height:300px; border-radius: 12px;"%>
    <% else %>
      <%= image_tag("https://images.unsplash.com/photo-1453614512568-c4024d13c247?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", :alt => "rss feed", :style => " width:100%;height:300px;") %>
    <% end %>

  </div>

  <img class="main-image" src="/assets/main-v-b0f007f0d8e080c612bd2e60ac5784fcb292926f34968ade87c7d9c5de556f34.png" alt="background-img">

  <div class="shop-info" style="">
    <div class="brand-detail my-3">
      <div class="brand-name-show">
        <h1><%= @brand.name %></h1>
      </div>
      <div class="shop-address">
        <%= @location.address %>
      </div>

      <div class="phone-num">
      <%= @location.phone_number %>
      </div>
    </div>

    <div class="brand-description my-3">
      <p class='w-100'><%= @brand.description %></p>
    </div>

  <% if @location.present? %>
    <div class="direction-link">
      <%= link_to "Direction", map_brands_path(address: @location.address), class: 'direction-link-button' %>
    </div>
  <% end %>

    <div class="brand-menu my-3">
      <h1>Menu</h1>
      <div class="menu-list">
        <% if @brand.category.name == "Sandwich Shop" %>
          <% JSON.parse(@brand.menu).each do |menu| %>
            <div class="container text-center">
              <div class="row align-items-start menu-items">
                <div class="col menu-icon">
                  <i class="fa-solid fa-bread-slice"></i>
                </div>
                <div class="col menu-name">
                  <%= menu["name"] %>
                </div>
                <div class="col menu-price">
                  <%= menu["price"] %>
                </div>
                  <% end %>
              </div>
            </div>
            <% else %>
              <% JSON.parse(@brand.menu).each do |menu| %>
                <div class="container text-center">
                  <div class="row align-items-start menu-items">
                    <div class="col menu-icon">
                      <i class="fa-solid fa-mug-saucer"></i>
                    </div>
                    <div class="col menu-name">
                      <%= menu["name"] %>
                    </div>
                    <div class="col menu-price">
                      <%= menu["price"] %>
                    </div>
                      <% end %>
                  </div>
                </div>
            <% end %>
      </div>
    </div>

</div>
<div class="set-height-shop-show"></div>

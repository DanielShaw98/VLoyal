<div class="container">
  <div class="brand-image">
    <%= image_tag("https://images.unsplash.com/photo-1453614512568-c4024d13c247?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", :alt => "rss feed", :style => " width:100%;height:300px;") %>
  </div>

  <div class="shop-info">
    <div class="brand-detail my-3">
      <h1><%= @brand.name %></h1>
      <%= @location.address %>
    </div>

    <div class="brand-description my-3">
      <%= @brand.description %>
    </div>

    <div class="brand-menu my-3">
      <h1>Menu</h1>
      <%= @brand.menu %>
    </div>

    <div class="direction-link my-3">
      <%= link_to "Direction", @brand.website,target: :_blank,class: 'direction-link' %>
    </div>


    <h3>Shop Information</h3>
    <div class="shop-detail my-4 row">
      <div class="col-6" >

        <div class="phone">
          <h4>Phone:</h4> <div class="phone-num"><%= @location.phone_number %></div>
        </div>
        <div class="address">
          <h4>Address:</h4><div class="shop-address"><%= @location.address %></div>
        </div>
      </div>


      <div class="col-6">
        <h4>Opening times:</h4>
      <div class="open-time">
        Monday: 07:00-17:00
        Tuesday: 07:00-17:00
        Wednesday: 07:00-17:00
        Thursday: 07:00-17:00
        Friday: 07:00-17:00
        Saturday: 09:00-16:00
        Sunday: 09:00-16:00
     </div>
    </div>
   </div>
  </div>
</div>

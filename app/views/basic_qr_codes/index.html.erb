<div class="qr-scan">
  <h1 class="text-center">Add a stamp</h1>
  <p class="p-3 text-center hint">Scan the QR code provided at a partnered store to add a stamp to your card.</p>

  <div data-controller="basic-qr-code-reader" data-basic-qr-code-reader-user-value='<%= current_user.id %>' data-action='click->basic-qr-code-reader#collapse'>

    <div class="video">
      <div class="guide">
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
        <div class="boundary"></div>
      </div>

      <video id="video"></video>
    </div>

    <div class="scan-result d-none" data-basic-qr-code-reader-target='resultContainer'>
      <div class="scan-alert" data-basic-qr-code-reader-target='alert'>
      </div>
      <div data-basic-qr-code-reader-target='card'>
      </div>
    </div>
  </div>
</div>
